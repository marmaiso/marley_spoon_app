<section class="showcase">
  <div class="container-fluid p-0">

    <div class="row no-gutters">
      <div class="col-lg-6 order-lg-2 text-white showcase-img" style="background-image: url(<%= @recipe.photo.url %>)"></div>
      <div class="col-lg-6 order-lg-1 my-auto showcase-text">
        <% if @recipe.tags %>
          <% @recipe.tags.each do |tag| %>
            <span class="label label-info label-tag"><%= tag.name %></span>
          <% end %>
        <% end %>
        <h1><%= @recipe.title %></h1>
        <h3><%= @recipe&.chef&.name %></h3>
        <p class="lead mb-0"><%= @recipe.description %></p>
        <%= link_to "Go Back To Recipes", recipes_path %>
      </div>
    </div>
  </div>
</section>
